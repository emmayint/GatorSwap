<% include ../partials/header %>
<div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h1>Edit <%= listing.name %></h1>
      </div>
      <div class="col-sm-3">
        <h3></h3>
        <a href="/listings"style="float: right;">Go Back</a>
      </div>
    </div>
        <!--<h1>Edit <%= listing.name %></h1>-->
        <!--<div style="width: 30%; margin: 25px auto;">-->
        <div class="row">
          <div class="col-sm-3">
            <img src="<%= listing.image %>" class="img-thumbnail" width="300" height="300" alt="<%= listing.name %>">
          </div>
          <div class="col-sm-9">
            <form class="form-horizontal" action="/listings/<%=listing._id%>?_method=PUT" method="POST">
                <div class="form-group">
                  <label class="control-label col-sm-2 " for="name">Listing Name:</label>
                  <div class="col-sm-6">
                    <input class="form-control" type="text" name="name" value="<%= listing.name %>">
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-2 " for="description">Listing Description:</label>
                  <div class="col-sm-6">
                    <textarea class="form-control" type="text" rows="4" name="description" value="<%= listing.description %>"></textarea>
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-2 " for="price">Listing Price:</label>
                  <div class="col-sm-6">
                    <input class="form-control" type="text" name=price" value="<%= listing.price %>">
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-2 " for="image">Listing Image:</label>
                  <div class="col-sm-6">
                    <input class="form-control" type="text" name="image" value="<%= listing.image %>">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-2">
                    <button class="btn">Update</button>
                  </div>
                </div>
            </form>
          </div>
        </div>
            <!--<a href="/listings">Go Back</a>-->
        <!--</div>-->
    <!--</div>-->
  </div>
<% include ../partials/footer %>
